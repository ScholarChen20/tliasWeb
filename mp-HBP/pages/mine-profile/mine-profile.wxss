/* pages/mine/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.profile-form {
  background: #fff;
  margin-bottom: 1000px;
  /* border-top: #fff; */
  height: 100%;
  width: 100%;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 30rpx;
}

.avatar-wrapper {
  flex: 1;
  width: 0px;
  height: 50px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 400rpx;
}

.radio-group {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  gap: 40rpx;
  margin-right: 155px;
}

.picker {
  flex: 1;
  text-align: right;
  color: #333;
}

.save-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #2d8cf0;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}