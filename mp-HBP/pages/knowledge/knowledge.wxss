/* pages/knowledge/knowledge.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.article-list {
  height: calc(100vh - 88rpx);
  padding: 20rpx;
}

.article-item {
  display: flex;
  background: #ffffff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.article-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.article-author {
  margin-right: 20rpx;
}

.article-time {
  flex: 1;
}

.loading-status {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.empty-status {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}