/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-top: 180rpx;
}

.login-container {
  padding: 40rpx;
}

.logo-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.login-form {
  background: #fff;
  border-radius: 16rpx;
  padding: 150rpx;
  /* box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05); */
}

.input-group {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 50rpx;
}

.input {
  flex: 1;
  font-size: 32rpx;
}

.login-btn {
  height: 80rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.account-login {
  background: #007AFF;
  color: #fff;
}

.wechat-login {
  background: #07C160;
  color: #fff;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.line {
  flex: 1;
  height: 2rpx;
  background: #eee;
}

.divider text {
  color: #999;
  padding: 0 20rpx;
  font-size: 24rpx;
}

.bottom-tips {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
}

.link {
  color: #007AFF;
  display: inline;
} 