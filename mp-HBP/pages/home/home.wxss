/* pages/home/home.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
  margin-top: 100px;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 血压数据卡片样式 */
.bp-data-container {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}

.bp-card {
  width: 42%;
  background-color: #2d8cf0;
  padding: 20rpx;
  border-radius: 16rpx;
  color: white;
}

.bp-card-target {
  width: 42%;
  background-color: #e43e14;
  padding: 20rpx;
  border-radius: 16rpx;
  color: white;
}
.card-title {
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

.bp-value {
  display: flex;
  text-align: center;
  margin-top: 30px;
  flex-direction: column;
  gap: 10rpx;
  font-size: 26rpx;
}

/* 功能按钮网格样式 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.grid-item {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.grid-item image {
  width: 60rpx;
  height: 60rpx;
}

.grid-item text {
  font-size: 28rpx;
  color: #333;
}

/* 系统介绍样式 */
.system-intro {
  margin: 30rpx 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.intro-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.intro-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.intro-item {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.item-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}