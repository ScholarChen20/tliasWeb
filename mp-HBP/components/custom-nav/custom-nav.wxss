/* components/custom-nav/custom-nav.wxss */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  z-index: 999;
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  position: relative;
}

.nav-left {
  padding: 0 16rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  text-align: center;
  padding-right: 48rpx; /* 当有返回按钮时，保持标题居中 */
}

.nav-title-center {
  padding: 0;
}